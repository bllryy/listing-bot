# Environment Configuration for Listing Bot
# Copy this to .env and fill in your actual values

# API Keys
API_KEY=your_api_key_here
INTERNAL_API_KEY=your_internal_key_here

# Discord Configuration
DISCORD_CLIENT_ID=1394403872809816125
DISCORD_CLIENT_SECRET=your_discord_secret_here

# Server Configuration
SERVER_HOST=localhost
BOT_SERVICE_HOST=listing-bot
SHOP_FRONTEND_HOST=shop-sites
SHOP_FRONTEND_PORT=7878

# Database (if applicable)
DATABASE_URL=sqlite:///./listing_bot.db

# Google AI Configuration (for AI API)
GOOGLE_AI_API_KEY=your_google_ai_key_here

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# Node Environment
NODE_ENV=development

# Python Environment
PYTHONUNBUFFERED=1

# Frontend URLs
REACT_APP_API_URL=http://localhost:8000
REACT_APP_BOT_API_URL=http://localhost:8002

# Logging
LOG_LEVEL=INFO
